{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "noEmit": true, // Impede a geração de arquivos transpilados
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
